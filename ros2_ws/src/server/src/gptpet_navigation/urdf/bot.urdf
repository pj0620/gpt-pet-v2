<?xml version="1.0"?>
<robot name="mecanum_bot" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- ========= CHASSIS LINK ========= -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.22 0.22 0.07"/>
      </geometry>
      <material name="Grey">
        <color rgba="0.5 0.5 0.5 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.6 0.4 0.1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="10.0"/>
      <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
    </inertial>
  </link>

  <!-- ========= WHEEL LINKS ========= -->
  <link name="wheel_left_1_link">
    <visual>
      <origin rpy="0 1.5708 0e"/>
      <geometry>
        <cylinder radius="0.05" length="0.047"/>
      </geometry>
      <material name="Black">
        <color rgba="0.1 0.1 0.1 1.0"/>
      </material>
    </visual>
    <collision>
      <origin rpy="0 1.5708 0"/>
      <geometry>
        <cylinder radius="0.05" length="0.02"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
    </inertial>
  </link>
  <link name="wheel_left_2_link">
    <visual>
      <origin rpy="0 1.5708 0"/>
      <geometry><cylinder radius="0.05" length="0.047"/></geometry>
      <material name="Black"><color rgba="0.1 0.1 0.1 1.0"/></material>
    </visual>
    <collision>
      <origin rpy="0 1.5708 0"/>
      <geometry><cylinder radius="0.05" length="0.047"/></geometry>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
    </inertial>
  </link>
  <link name="wheel_right_1_link">
    <visual>
      <origin rpy="0 1.5708 0"/>
      <geometry><cylinder radius="0.05" length="0.047"/></geometry>
      <material name="Black"><color rgba="0.1 0.1 0.1 1.0"/></material>
    </visual>
    <collision>
      <origin rpy="0 1.5708 0"/>
      <geometry><cylinder radius="0.05" length="0.02"/></geometry>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
    </inertial>
  </link>
  <link name="wheel_right_2_link">
    <visual>
      <origin rpy="0 1.5708 0"/>
      <geometry><cylinder radius="0.05" length="0.047"/></geometry>
      <material name="Black"><color rgba="0.1 0.1 0.1 1.0"/></material>
    </visual>
    <collision>
      <origin rpy="0 1.5708 0"/>
      <geometry><cylinder radius="0.05" length="0.02"/></geometry>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
    </inertial>
  </link>

  <!-- ========= KINECT-LIKE LASER SENSOR LINK ========= -->
  <link name="base_laser_link">
    <visual>
      <!-- approximate Xbox Kinect 360 housing as a rectangular box -->
      <origin xyz="-0.35 -.08 -0.0245" rpy="0 0 0"/>
      <geometry>
        <box size="0.28 0.07 0.04"/>
      </geometry>
      <material name="SensorGrey">
        <color rgba="0.2 0.2 0.2 1.0"/>
      </material>
    </visual>
    <visual>
      <!-- approximate Xbox Kinect 360 housing as a rectangular box -->
      <origin xyz="-0.35 -0.07 -0.07" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.1" radius="0.02"/>
      </geometry>
      <material name="SensorGrey">
        <color rgba="0.2 0.2 0.2 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.12 0.05 0.07"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.002" ixy="0" ixz="0" iyy="0.002" iyz="0" izz="0.002"/>
    </inertial>
  </link>
  <joint name="laser_joint" type="fixed">
    <parent link="base_link"/>
    <child  link="base_laser_link"/>
    <!-- Mounted at very front (x=+0.35m), slightly above chassis (z=+0.15m) -->
    <origin xyz="0.35 0 0.15" rpy="0 0 0"/>
  </joint>

  <!-- ========= JOINTS ========= -->
  <joint name="velocity_left_1_joint" type="continuous">
    <parent link="base_link"/>
    <child  link="wheel_left_1_link"/>
    <origin xyz="0.1338  0.06 0" rpy="0 0 0"/>
    <axis  xyz="0 0 1"/>
  </joint>
  <joint name="velocity_left_2_joint" type="continuous">
    <parent link="base_link"/>
    <child  link="wheel_left_2_link"/>
    <origin xyz="-0.1338  0.06 0" rpy="0 0 0"/>
    <axis  xyz="0 0 1"/>
  </joint>
  <joint name="velocity_right_1_joint" type="continuous">
    <parent link="base_link"/>
    <child  link="wheel_right_1_link"/>
    <origin xyz="0.1338 -0.06 0" rpy="0 0 0"/>
    <axis  xyz="0 0 1"/>
  </joint>
  <joint name="velocity_right_2_joint" type="continuous">
    <parent link="base_link"/>
    <child  link="wheel_right_2_link"/>
    <origin xyz="-0.1338 -0.06 0" rpy="0 0 0"/>
    <axis  xyz="0 0 1"/>
  </joint>

  <!-- ========= TRANSMISSIONS ========= -->
  <transmission name="trans_vel_left_1">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="velocity_left_1_joint">
      <hardwareInterface>velocity</hardwareInterface>
    </joint>
    <actuator name="motor_left_1">
      <hardwareInterface>velocity</hardwareInterface>
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission>
  <transmission name="trans_vel_left_2">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="velocity_left_2_joint">
      <hardwareInterface>velocity</hardwareInterface>
    </joint>
    <actuator name="motor_left_2">
      <hardwareInterface>velocity</hardwareInterface>
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission>
  <transmission name="trans_vel_right_1">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="velocity_right_1_joint">
      <hardwareInterface>velocity</hardwareInterface>
    </joint>
    <actuator name="motor_right_1">
      <hardwareInterface>velocity</hardwareInterface>
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission>
  <transmission name="trans_vel_right_2">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="velocity_right_2_joint">
      <hardwareInterface>velocity</hardwareInterface>
    </joint>
    <actuator name="motor_right_2">
      <hardwareInterface>velocity</hardwareInterface>
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission>

  <!-- ========= ROS2_CONTROL PLUGIN ========= -->
  <ros2_control name="MecanumSystem" type="system">
    <hardware>
      <!-- replace with your actual hardware interface plugin -->
      <plugin>your_hardware_interface/MyHardwareInterface</plugin>
    </hardware>
  </ros2_control>

</robot>
